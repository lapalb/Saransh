<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="30dp"
    android:background="#dee2e6"
    android:padding="30dp">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="25dp"
        >

        <TextView style="@style/MyDefaultTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Name" />

        <TextView style="@style/MyDefaultTextAppearance"
            android:id="@+id/name"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_column="2" />

    </TableRow>

    <TableRow

        android:layout_marginBottom="25dp">

        <TextView style="@style/MyDefaultTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="ID" />

        <TextView style="@style/MyDefaultTextAppearance"
            android:id="@+id/id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:width="200px" />
    </TableRow>

    <TableRow android:layout_marginBottom="25dp">

        <TextView style="@style/MyDefaultTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="location" />

        <TextView style="@style/MyDefaultTextAppearance"
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100px" />
    </TableRow>

    <TableRow android:layout_marginBottom="25dp">

        <TextView style="@style/MyDefaultTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Number of Repo" />

        <TextView style="@style/MyDefaultTextAppearance"
            android:id="@+id/repo_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100px" />
    </TableRow>

    <TableRow android:layout_marginBottom="25dp">

        <TextView style="@style/MyDefaultTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Number of Gist" />

        <TextView style="@style/MyDefaultTextAppearance"
            android:id="@+id/gist_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100px" />
    </TableRow>

    <TableRow android:layout_marginBottom="25dp">

        <TextView style="@style/MyDefaultTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Number of Follower" />

        <TextView style="@style/MyDefaultTextAppearance"
            android:id="@+id/follower_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100px" />
    </TableRow>

    <TableRow android:layout_marginBottom="55dp">

        <TextView style="@style/MyDefaultTextAppearance"
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Number of Following" />

        <TextView style="@style/MyDefaultTextAppearance"
            android:id="@+id/following_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100px" />
    </TableRow>

    <TableRow android:layout_marginBottom="40dp">

        <TextView style="@style/MyDefaultTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="About" />

        <TextView style="@style/MyDefaultTextAppearance"
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:width="100px" />
    </TableRow>


</TableLayout>